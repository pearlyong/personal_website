<div class="container">
  <div class="page-header">
    <h1>Articles</h1>
    <%= link_to 'Create New Article', new_article_path, class: 'btn btn-success btn-lg', type: 'button'  %>
  </div>
  <div class="container">
    <% @articles.each do |article| %>
    <div class="col-md-4">
      <h1><%= link_to article.title, article_path(article) %></h1>
      <p><%= sanitize(article.text.truncate(500, separator: '</p>')) %></p>
      <div class="label-actions">
        <%= link_to 'View', article_path(article), class: 'label label-info' %>
        <%= link_to 'Edit', edit_article_path(article), class: 'label label-warning' %>
        <%= link_to 'Delete', article_path(article),
                              class: 'label label-danger',
                              method: :delete, 
                              data: { confirm: 'Are You Sure?' } %>
        <hr>
      </div>
    </div>
    <% end %>
  </div>
</div>